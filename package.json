{
  "name": "agent-chat",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "dev": "bun run --filter='*' dev",
    "dev:dashboard": "bun run --filter=dashboard dev",
    "dev:server": "bun run --filter=agent-server dev",
    "build": "bun run --filter='*' build",

    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",

    "db:migrate:supabase": "supabase db push",
    "db:types": "supabase gen types typescript --local > packages/shared/src/database.types.ts"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8",
    "supabase": "^2.72.3"
  }
}
